@model IEnumerable<NovoMVC.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Cadastrar Novo Produto</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Preco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info text-white">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
