@model NovoMVC.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Preco)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Preco)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
