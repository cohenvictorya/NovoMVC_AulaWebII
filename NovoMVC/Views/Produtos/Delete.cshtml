@model NovoMVC.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        <strong>Tem certeza de que deseja excluir este produto?</strong>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Preco)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Preco)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
